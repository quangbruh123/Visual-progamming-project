<Page x:Class="Da_projekt.RunSortPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:gif="https://github.com/XamlAnimatedGif/XamlAnimatedGif"
      xmlns:local="clr-namespace:Da_projekt"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CompareSelection">
    <Page.Background>
        <ImageBrush x:Name="ibSource" ImageSource="/CompareSelection.jpg" Stretch="UniformToFill"></ImageBrush>
    </Page.Background>
    <Grid x:Name="Grid">
        <Grid.RowDefinitions>
            <RowDefinition Height="70*"/>
            <RowDefinition Height="275*"/>
           
            <RowDefinition Height="70*"/>
            <RowDefinition Height="70*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="27*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="74*"/>
            <ColumnDefinition Width="45*"/>
            <ColumnDefinition Width="25*"/>
        </Grid.ColumnDefinitions>
        <Label  Content="Chọn phương pháp nhập dữ liệu vào:" 
                VerticalAlignment="Center"
                Grid.Column="1" 
                Grid.Row="2"
                Style="{StaticResource lblDesign}"  />

        <Label  x:Name="lbInput"
                Content="Nhập các số cần xếp:" 
                VerticalAlignment="Center"
                Grid.Column="1" 
                Grid.Row="3"
                Style="{StaticResource lblDesign}"/>

        <ComboBox   x:Name="Selection" 
                    Grid.Column="2"
                    Grid.Row="2"
                    IsSynchronizedWithCurrentItem="True" 
                    SelectedIndex="0"
                    SelectionChanged="ComboBox_SelectionChanged" 
                    VerticalContentAlignment="Center"
                    Style="{StaticResource cbxlDesign}">
            <ComboBoxItem Content="Nhập bằng tay" />
            <ComboBoxItem Content="Ngẫu nhiên" />
            <ComboBoxItem Content="Nhập từ file / DTB" />
        </ComboBox>


        <TextBox x:Name="tbxInput" 
                 Grid.Column="2"
                 Grid.Row="3"
                 TextWrapping="NoWrap"
                 Style="{StaticResource txblDesign}"
                 VerticalContentAlignment="Center"  />


        <ListBox x:Name="SortList"  
                 Grid.Column="1" 
                 Grid.ColumnSpan="2"
                 Grid.Row="1"
                 HorizontalContentAlignment="Stretch"
                 VerticalAlignment="Stretch"
                 ScrollViewer.HorizontalScrollBarVisibility="Hidden" 
                 ScrollViewer.VerticalScrollBarVisibility="Hidden"  >

            <ListBoxItem Content="Selection Sort" 
                         Height="{Binding Path=ActualHeight, ElementName=SortList}" 
                         Style="{StaticResource lbIDesign}"/>
            <ListBoxItem Content="Bubble Sort" 
                         Height="{Binding Path=ActualHeight, ElementName=SortList}"
                         Style="{StaticResource lbIDesign}"/>
            <ListBoxItem Content="Insertion Sort" 
                         Height="{Binding Path=ActualHeight, ElementName=SortList}"
                         Style="{StaticResource lbIDesign}"/>
            <ListBoxItem Content="Interchange Sort" 
                         Height="{Binding Path=ActualHeight, ElementName=SortList}"
                         Style="{StaticResource lbIDesign}"/>
            <ListBoxItem Content="Merge Sort" 
                         Height="{Binding Path=ActualHeight, ElementName=SortList}"
                         Style="{StaticResource lbIDesign}"/>
            <ListBoxItem Content="Quick Sort" 
                         Height="{Binding Path=ActualHeight, ElementName=SortList}"
                         Style="{StaticResource lbIDesign}"/>
        </ListBox>

        <Button Content="Kế tiếp" 
                Grid.Column="3" 
                VerticalAlignment="Center" 
                 Grid.Row="1"
                Click="btnNext_Click" 
                Style="{StaticResource btnDesign}"
                />

        <Button Content="Trước"
                VerticalAlignment="Center"
                Click="btnPrevious_Click" 
                Grid.Row="1"
                Style="{StaticResource btnDesign}"
                 />

        <Button Content="Bắt đầu"
                Grid.Column="2"
                Grid.Row="4"
                Click="btnConfirm_Click" 
                Style="{StaticResource btnDesign}">

        </Button>
        <Button Content="        Trở về trang trước      "
                Grid.Row="5"
                Grid.ColumnSpan="2"
                HorizontalAlignment="Left"
                Click="btnReturn_Click" 
                Style="{StaticResource btnDesign}">

        </Button>
        <Image Grid.Column="2"
               Grid.Row="1"
               gif:AnimationBehavior.SourceUri="Resources/Selection Sort.gif" 
               HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch"
               Visibility="Visible"/>
    </Grid>
</Page>
