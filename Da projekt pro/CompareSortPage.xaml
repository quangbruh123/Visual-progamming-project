<Page x:Class="Da_projekt.CompareSortPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Da_projekt"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CompareSelection">
    <Page.Background>
        <ImageBrush x:Name="ibSource" ImageSource="/CompareSelection.jpg" Stretch="UniformToFill"></ImageBrush>
    </Page.Background>
    <Grid x:Name="Grid">
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="38*"/>
            <RowDefinition Height="44*"/>
            <RowDefinition Height="261*"/>
            <RowDefinition Height="34*"/>
            <RowDefinition Height="23*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="74*"/>
            <ColumnDefinition Width="45*"/>
            <ColumnDefinition Width="25*"/>
        </Grid.ColumnDefinitions>
        <Label  Content="Chọn phương pháp nhập dữ liệu vào:" 
                VerticalAlignment="Center" 
                Grid.Row="1"
                Style="{StaticResource lblDesign}" Grid.ColumnSpan="3" Height="34" Margin="118,0,213,0"  />

        <Label  x:Name="lbInput"
                Content="Nhập các số cần xếp:" 
                VerticalAlignment="Center" 
                Grid.Row="2"
                Style="{StaticResource lblDesign}" Grid.ColumnSpan="3" Height="34" Margin="118,0,213,0"/>

        <ComboBox   x:Name="Selection" 
                    Grid.Column="2"
                    Grid.Row="1"
                    IsSynchronizedWithCurrentItem="True" 
                    SelectedIndex="0"
                    SelectionChanged="ComboBox_SelectionChanged" 
                    VerticalContentAlignment="Center"
                    Style="{StaticResource cbxlDesign}" Grid.ColumnSpan="2" Margin="0,0,118,0">
            <ComboBoxItem Content="Nhập bằng tay" />
            <ComboBoxItem Content="Ngẫu nhiên" />
            <ComboBoxItem Content="Nhập từ file / DTB" />
        </ComboBox>


        <TextBox x:Name="tbxInput" 
                 Grid.Column="2"
                 Grid.Row="2"
                 TextWrapping="NoWrap"
                 Style="{StaticResource txblDesign}"
                 VerticalContentAlignment="Center" Grid.ColumnSpan="2" Grid.RowSpan="1" Margin="0,0,118,0"  />

        <Button Content="Bắt đầu"
                Grid.Column="2"
                Grid.Row="4"
                Click="btnConfirm_Click" 
                Style="{StaticResource btnDesign}" Grid.ColumnSpan="2" Margin="0,0,118,0">

        </Button>
        <Button Content="        Trở về trang trước      "
                Grid.Row="4"
                Grid.ColumnSpan="2"
                HorizontalAlignment="Left"
                Click="btnReturn_Click" 
                Style="{StaticResource btnDesign}" Width="235">

        </Button>
    </Grid>
</Page>
